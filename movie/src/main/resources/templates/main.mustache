{{>layouts/header}}
<link rel="stylesheet" href="/css/main.css">

<header>
    <div class="menu" id="menu">
        <h1>MovieBox</h1>
        <div class="loginmenu">
            {{^loginEmail}}
                <button type="button" onClick="location.href='/user/login'" class="btn btn-outline-light me-2">Login</button>
                <button type="button" onClick="location.href='/user/register'" class="btn btn-warning">Sign-up</button>
            {{/loginEmail}}
            {{#loginEmail}}
                <h2>{{name}}</h2>
                <button type="button" onClick="location.href='/user/logout'" class="btn btn-warning">Logout</button>
            {{/loginEmail}}
        </div>
    </div>
</header>

<!--스크립트-->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="/js/TMDB.js"></script>
<script src="/js/youtube.js"></script>

<section>
    <div id="wrap" class="wrap">
        <div id="video-swiper" class="swiper-container">
            <div id="main" class="swiper-wrapper">
                <div class="swiper-slide">
                    <iframe width="500" height="400" src="https://www.youtube.com/embed/a3ICNMQW7Ok?enablejsapi=1&rel=0" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
    <img src="/img/chair.png" id="chair">
</section>

<div id="list">
    <div class="search_bar">
        <form id="form">
            <input type="text" placeholder="검색" id="search" class="search">
        </form>
    </div>
    <div id="tags">
        <div class="tag">액션</div>
        <div class="tag">어드밴처</div>
        <div class="tag">드라마</div>
        <div class="tag">코미디</div>
    </div>
    <div id="page_list">
        <div class="movie">
            <img src="https://w.namu.la/s/2b96c1f6b73672e8bbed26865bda4680983f887ffb4ea3a571dfe49719c547a1a2c9d1807ab610e9b55ffdd0b6826f24121d6e4fc3784f2c477e02395034d0829c1d58e0a6280e5b05638fd77f79491b459dda9afd11d1e1e28e60ff30c3a48d34f4ad9a4ebcac9d1d36dc701f37202a" alt="Image">

            <div class="movie-info">
                <h3>Movie Title</h3>
                <span class="green">9.8</span>
            </div>
        </div>
    </div>
</div>

<div class="pagination">
    <div class="page disabled" id="prev">이전 페이지</div>
    <div class="current" id="current">1</div>
    <div class="page" id="next">다음 페이지</div>
</div>

<script src="/js/Getlist.js"></script>

<script>
    let wrap = document.getElementById('wrap');
    let menu = document.getElementById('menu');

    window.addEventListener('scroll', function(){
        let value = window.scrollY;
        menu.style.top = value * 1.00+ 'px';
        wrap.style.top = value * 1.00+ 'px';
    })
</script>

